header{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    margin-top: 15px;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-family: 'Poiret One', cursive;
}

header ul{
    display: flex;
    justify-content: center;
    align-items: center;
}

header ul li{
    list-style: none;
    margin-left: 20px;
}

header ul li a{
    text-decoration: none;
    padding: 6px 15px;
    color: white;
}
body{
    background: black;
    background-repeat: no-repeat;
    height: auto;
}
form{
    color: white;
    margin: 0 auto;
    width: 450px;
}
.text-head{
    font-family: 'Yeseva One';
    color: lightyellow;
    font-size: 90px;
    margin-top: 80px;
    margin-left: 30px;
}
input[type="text"] {
    margin-bottom: 0.75rem;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    width: 100%;
    border-radius: 5px;
    border: none;
    box-shadow: 0px 1px 4px #000000a1;
}
input[type="text"]::placeholder {
    color: rgba(211, 211, 211, 0.555);
    font-size: 14.5px;
    font-family: 'DM Sans', sans-serif;
}
textarea {
    margin-bottom: 0.75rem;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    width: 100%;
    border-radius: 5px;
    border: none;
    box-shadow: 0px 1px 4px #000000a1;
    font-family: 'DM Sans', sans-serif;
}
textarea::placeholder {
    color: rgba(211, 211, 211, 0.666);
    font-size: 14.5px;
}
label {
    font-family: 'Poiret One', cursive;
    color: white;
    font-size: 18px;
    border: 1.5em;
}
.btn{
    font-family: 'DM Sans', sans-serif;
}