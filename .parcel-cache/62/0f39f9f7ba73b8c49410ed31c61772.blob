body {
  background: #e94626;
  background: linear-gradient(90deg, rgba(233, 70, 38, 0.453427065) 0%, #e2dbdb 50%, rgba(233, 70, 38, 0.45) 100%);
  height: auto;
  line-height: 1.5;
}

.head {
  font-family: "Yeseva One";
  font-size: 48px;
  margin: 0;
  margin-left: 20px;
}

.logo {
  width: 400px;
  display: block;
  background-color: lightgrey;
  border-radius: 50rem;
  margin-left: 50px;
  margin: 1rem;
}

.text-title {
  font-family: "Playfair Display SC", serif;
  font-size: 100px;
  padding: 1em;
}

.text-Decs {
  font-family: "DM Sans", sans-serif;
  font-size: 45px;
  padding: 1em;
}