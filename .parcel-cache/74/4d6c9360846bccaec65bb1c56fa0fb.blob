body {
  background: #e2dbdb;
  background: linear-gradient(90deg, #e2dbdb 0%, rgba(233, 70, 38, 0.4586994728) 50%, #e2dbdb 100%);
  background-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/9632/northernlights.jpg);
  background-repeat: no-repeat;
  height: 800px;
  line-height: 1.5;
}

.head {
  font-family: "Source Code Pro", monospace;
  font-size: 48px;
  margin: 0;
  margin-left: 20px;
}

.logo {
  width: 200px;
  display: block;
  background-color: lightgrey;
  border-radius: 10rem;
  margin-left: 50px;
}

.text-title {
  font-size: 32px;
  font-family: "Red Hat Display", sans-serif;
  width: 500px;
}