body{
        background: black;
        background-repeat: no-repeat;
        height: auto;
    }
    form{
        color: white;
       margin: 0 auto;
       width: 340px;
    }
    .text-head{
        font-family: 'Syncopate', sans-serif;
    }
    input[type="text"] {
       margin-bottom: 0.75rem;
       padding: 0.5rem 1rem;
       font-size: 1rem;
       width: 100%;
       border-radius: 5px;
       border: none;
       box-shadow: 0px 1px 4px #000000a1;
   }
   input[type="text"]::placeholder {
       color: rgba(211, 211, 211, 0.555);
       font-size: 14.5px;
   }
   textarea {
       margin-bottom: 0.75rem;
       padding: 0.5rem 1rem;
       font-size: 1rem;
       width: 100%;
       border-radius: 5px;
       border: none;
       box-shadow: 0px 1px 4px #000000a1;
   }
   textarea::placeholder {
       color: rgba(211, 211, 211, 0.555);
       font-size: 14.5px;
   }