body {
  background: #e94626;
  background: linear-gradient(90deg, rgba(233, 70, 38, 0.453427065) 0%, #e2dbdb 50%, rgba(233, 70, 38, 0.45) 100%);
  min-height: 100vh;
  line-height: 1.5;
}

.head {
  font-family: "Yeseva One";
  font-size: 4.5em;
  margin: 20px;
  margin-left: 20px;
}

.logo {
  width: 400px;
  display: block;
  background-color: lightgrey;
  border-radius: 50rem;
  margin: 4rem;
}

.text-title {
  font-family: "Playfair Display SC", serif;
  font-size: 100px;
  padding: 1em;
}

.text-Decs {
  font-family: "DM Sans", sans-serif;
  font-size: 45px;
  padding: 1em;
}

.phone {
  font-size: 12px;
  font-family: "Poiret One", cursive;
}

.header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 30px 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: "Poiret One", cursive;
}